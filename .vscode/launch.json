    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Deploy And Run On Remote",
            "type": "python",
            "request": "attach",
            "port": 5678,
            "host": "${config:sshEndpoint}",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "~/${config:remoteDir}"
                }
            ],
            "preLaunchTask": "copyAndStartOnPi",
            "postDebugTask": "cleanupOnPi"
        }
    ]
}